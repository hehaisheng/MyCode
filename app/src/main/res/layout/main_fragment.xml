<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hhs="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/main_fragment_first"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <TextView
            android:id="@+id/middle_text"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>
        <com.example.pc_.mycode.view.custom.CustomImageView
            android:id="@+id/main_meat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            hhs:src="@drawable/meat"
            hhs:type="circle"
            android:layout_toLeftOf="@+id/main_greens"
            android:layout_alignParentTop="true"
            app:layout_marginRightPercent="14%w"
            android:layout_marginTop="5dp"/>
        <com.example.pc_.mycode.view.custom.CustomImageView
            android:id="@+id/main_greens"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            hhs:type="circle"
            hhs:src="@drawable/greens"
            android:layout_toLeftOf="@+id/middle_text"
            android:layout_alignTop="@+id/main_meat"
            app:layout_marginRightPercent="7%w"
            />
        <com.example.pc_.mycode.view.custom.CustomImageView
            android:id="@+id/main_cooked"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            hhs:type="circle"
            android:layout_toRightOf="@+id/middle_text"
            android:layout_alignTop="@+id/main_seaFood"
            app:layout_marginLeftPercent="7%w"
            hhs:src="@drawable/cooked"/>
        <com.example.pc_.mycode.view.custom.CustomImageView
            android:id="@+id/main_seaFood"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            hhs:src="@drawable/seafood"
            hhs:type="circle"
            android:layout_toRightOf="@+id/main_cooked"
            android:layout_alignParentTop="true"
            app:layout_marginLeftPercent="14%w"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/main_meat_text"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="肉类"
            android:textColor="@color/text_common"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_alignLeft="@+id/main_meat"
            android:layout_below="@+id/main_meat"
            />
        <TextView
            android:id="@+id/main_greens_text"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="蔬菜"
            android:textColor="@color/text_common"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_alignLeft="@+id/main_greens"
            android:layout_below="@+id/main_greens"
            />
        <TextView
            android:id="@+id/main_cooked_text"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="熟食"
            android:textColor="@color/text_common"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_alignLeft="@+id/main_cooked"
            android:layout_below="@+id/main_cooked"
            />
        <TextView
            android:id="@+id/main_seaFood_text"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="海鲜"
            android:textColor="@color/text_common"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_alignLeft="@+id/main_seaFood"
            android:layout_below="@+id/main_seaFood"
            />

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/main_fragment_second"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <TextView
            android:id="@+id/middle_text1"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>
        <com.example.pc_.mycode.view.custom.CustomImageView
            android:id="@+id/main_freeze"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            hhs:src="@drawable/freeze"
            hhs:type="circle"
            android:layout_toLeftOf="@+id/main_goods"
            android:layout_alignParentTop="true"
            app:layout_marginRightPercent="14%w"
            android:layout_marginTop="5dp"/>
        <com.example.pc_.mycode.view.custom.CustomImageView
            android:id="@+id/main_goods"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            hhs:src="@drawable/goods"
            hhs:type="circle"
            android:layout_toLeftOf="@+id/middle_text1"
            android:layout_alignTop="@+id/main_freeze"
            app:layout_marginRightPercent="7%w"/>
        <com.example.pc_.mycode.view.custom.CustomImageView
            android:id="@+id/main_grains"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/middle_text1"
            app:layout_marginLeftPercent="7%w"
            android:layout_alignTop="@+id/main_fruit"
            hhs:type="circle"
            hhs:src="@drawable/zailiang1"/>
        <com.example.pc_.mycode.view.custom.CustomImageView
            android:id="@+id/main_fruit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            hhs:type="circle"
            hhs:src="@drawable/fruit"
            android:layout_toRightOf="@+id/main_grains"
            android:layout_alignParentTop="true"
            app:layout_marginLeftPercent="14%w"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/main__freeze_text"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="冻品"
            android:textColor="@color/text_common"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_alignLeft="@+id/main_freeze"
            android:layout_below="@+id/main_freeze"
            />
        <TextView
            android:id="@+id/main_goods_text"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="杂货"
            android:textColor="@color/text_common"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_alignLeft="@+id/main_goods"
            android:layout_below="@+id/main_goods"
            />
        <TextView
            android:id="@+id/main_grains_text"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="杂粮"
            android:textColor="@color/text_common"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_alignLeft="@+id/main_grains"
            android:layout_below="@+id/main_grains"
            />
        <TextView
            android:id="@+id/main_fruit_text"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="果类"
            android:textColor="@color/text_common"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_alignLeft="@+id/main_fruit"
            android:layout_below="@+id/main_fruit"
            />

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="——  优选  ——"
        android:textColor="@color/colorTheme"
        android:textSize="13sp"
        android:gravity="center"
        android:padding="1dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorLineItem"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_SwipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"

            >

        </android.support.v7.widget.RecyclerView>


    </android.support.v4.widget.SwipeRefreshLayout>


    <RelativeLayout
        android:id="@+id/main_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/itemBackground"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/main_fragment_progress"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDuration="1000"
            android:indeterminateDrawable="@anim/large_progressbar_animator"/>
        <TextView
            android:id="@+id/main_fragment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTheme"
            android:layout_below="@+id/login_progress"
            android:text="登陆中..."
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:gravity="center"

            />


    </RelativeLayout>

    <TextView
        android:id="@+id/main_fragment_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/colorTheme"
        android:text="登陆中..."
        android:textSize="12sp"
        android:gravity="center"
        android:visibility="gone"
        />

</LinearLayout>
